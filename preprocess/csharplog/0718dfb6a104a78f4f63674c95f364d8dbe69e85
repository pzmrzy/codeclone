+        [TestMethod]
+        [TestCategory(TestCategories.ST4)]
+        public void TestListWithTwoEmptyListsCollapsesToEmptyList()
+        {
+            Template e = new Template(
+                "<[[],[]]:{x | <x>!}; separator=\", \">"
+            );
+            e.Add("names", "Ter");
+            e.Add("names", "Tom");
+            string expecting = "";
+            Assert.AreEqual(expecting, e.Render());
+        }
