+namespace StringTemplate.Compiler
+{
+    public struct Interval
+    {
+        public Interval(int a, int b)
+            : this()
+        {
+            this.A = a;
+            this.B = b;
+        }
+
+        public int A
+        {
+            get;
+            private set;
+        }
+
+        public int B
+        {
+            get;
+            private set;
+        }
+    }
+}
